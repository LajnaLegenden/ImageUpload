{{!< default}}

{{#contentFor 'head'}} 
<link rel="stylesheet" href="styles/galleryStyle.css">
{{/contentFor}}
{{#contentFor 'script'}} 
<script src="js/galleryScript.js"></script>
{{/contentFor}}
<main class="container">
    <h1>Gallery</h1>
    <div class="row">
        {{#each items}}
        <div class="col-lg-3 col-sm-4 col-xs-6">
            <a title="Image {{add @index}}" href="#">
                <img class="thumbnail img-responsive" alt="{{add @index}}" src="{{this}}">
            </a>
        </div>
        {{/each}}

    </div>
    <div class="space"><p></p></div>
    <div class="space"><p></p></div>
</main>
